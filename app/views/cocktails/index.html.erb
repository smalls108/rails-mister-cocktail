
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-items">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/des1pqcf2/image/upload/v1606466770/cocktail-shaker_ueelu7.svg" %>
  <% end %>
  <h1>Cocktails</h1>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Create a cocktail", new_cocktail_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
  </div>
</div>



<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
      <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      <ul>
        <% cocktail.ingredients.each do |ingredient| %>
          <li><%= ingredient.name %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>


