<h2><%= @cocktail.name %></h2>
<ul>
  <% @doses.each do |dose| %>
  <li><%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to "delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>

<%= link_to "View all cocktails", cocktails_path %>
